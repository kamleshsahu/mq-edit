<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_expanded="true"
        app:el_duration="700"
        app:el_parallax="1">

    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:paddingTop="7dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp">


        <android.support.v7.widget.CardView
            android:layout_margin="7dp"
            android:id="@+id/originbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Start Address"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:paddingBottom="3dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_gravity="center_vertical"
                        app:lottie_rawRes="@raw/locationcurrent"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:scaleX="2"
                        android:scaleY="1.5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-3dp"
                        android:layout_weight="1.5"/>
                    <TextView
                        android:ellipsize="marquee"
                        android:id="@+id/origin"
                        android:cursorVisible="true"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="20sp"
                        android:textAllCaps="true"
                        android:layout_marginTop="1dp"
                        android:hint="Start"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="7dp"
            android:id="@+id/dstnbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Destination Address"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:paddingBottom="3dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/locationdstnicon"
                        android:layout_gravity="center_vertical"
                        app:lottie_rawRes="@raw/location"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:scaleX="2"
                        android:scaleY="1.5"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-3dp"
                        android:layout_weight="1.5"/>
                    <TextView
                        android:ellipsize="marquee"
                        android:layout_marginTop="1dp"
                        android:id="@+id/dstn"
                        android:cursorVisible="true"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="20sp"
                        android:textAllCaps="true"
                        android:hint="Destination"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
<RelativeLayout
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:layout_toLeftOf="@id/datepickerclicker"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        app:cardCornerRadius="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/ic_date_range_black_24dp"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:layout_gravity="bottom"
                android:text="Add Route"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/datepickerclicker"
            android:layout_margin="7dp"
            app:cardCornerRadius="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_date_range_black_24dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:text="24"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center_horizontal"
                        android:id="@+id/time"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                <TextView
                    android:text="525"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/date"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                    <!--<android.support.v7.widget.CardView-->
